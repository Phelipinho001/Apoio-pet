// FUN√á√ÉO PARA ABRIR O MODAL
function abrirModal(nome) {
    const pet = pets[nome];

    document.getElementById("modalImg").src = pet.img;
    document.getElementById("modalTitle").textContent = nome;
    document.getElementById("modalStatus").textContent = pet.status;
    document.getElementById("modalIdade").textContent = pet.idade;
    document.getElementById("modalRaca").textContent = pet.raca;
    document.getElementById("modalSexo").textContent = pet.sexo;
    document.getElementById("modalTamanho").textContent = pet.tamanho;
    document.getElementById("modalLocal").textContent = pet.local;
    document.getElementById("modalHistoria").textContent = pet.historia;
    document.getElementById("modalTemperamento").textContent = pet.temperamento;
    document.getElementById("modalVacinas").textContent = pet.vacinas;
    document.getElementById("modalCastrado").textContent = pet.castrado;
    document.getElementById("modalVermifugado").textContent = pet.vermifugado;

    overlay.style.display = "flex";
}

// BOT√ïES SAIBA MAIS (funciona em qualquer card)
document.querySelectorAll(".btn-saiba, .btn-saiba-lar").forEach(btn => {
    btn.addEventListener("click", () => {
        const nome = btn.closest("div").querySelector("h3").textContent;
        abrirModal(nome);
    });
});

// FECHAR
document.getElementById("modalClose").onclick = () => overlay.style.display = "none";
overlay.onclick = e => { if (e.target === overlay) overlay.style.display = "none"; };
</script>



</body>
</html>
